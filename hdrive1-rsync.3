then
:
else
        echo "fdrive-work not exist"  | tee -a  $ALLLOGFILE $WORKLOGFILE
        umount /mnt/fdrive-work
        echo "`date +%Y%m%d%k%M%S` umount fdrive-work" | tee -a  $ALLLOGFILE $WORKLOGFILE
        exit 1
