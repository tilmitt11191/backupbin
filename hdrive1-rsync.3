umount /mnt/$TARGETDRIVE-work
echo "`date +%Y%m%d%k%M%S` umount $TARGETDRIVE-work"  | tee -a  $ALLLOGFILE $WORKLOGFILE
umount /mnt/fdrive-work
echo "`date +%Y%m%d%k%M%S` umount fdrove-work" | tee -a  $ALLLOGFILE $WORKLOGFILE
exit 0
